{
    "name": "nextjs-template",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "postinstall": "prisma generate",
        "typecheck": "prisma generate && tsc --noEmit",
        "lint": "next lint",
        "test": "vitest run --passWithNoTests",
        "prepare": "husky install",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:migrate:deploy": "bash -lc 'export $(grep -v \"^#\" .env.production | xargs); prisma migrate deploy'",
        "prisma:studio": "prisma studio",
        "gen:types": "dotenv -e .env -- npx supabase gen types typescript --db-url \"$DB_URL\" --schema public,auth,storage,graphql_public > src/types/supabase.ts",
        "supabase:setup": "bash scripts/setup-volumes.sh",
        "supabase:start": "npm run supabase:setup && cd supabase-selfhost && docker compose -f docker-compose.yml -f ./dev/docker-compose.dev.yml up -d",
        "supabase:stop": "cd supabase-selfhost && docker compose down",
        "supabase:restart": "npm run supabase:stop && npm run supabase:start",
        "supabase:logs": "cd supabase-selfhost && docker compose logs -f",
        "supabase:reset": "cd supabase-selfhost && ./reset.sh",
        "supabase:cli:start": "supabase start",
        "supabase:cli:stop": "supabase stop",
        "supabase:cli:reset": "supabase db reset",
        "supabase:cli:migrate": "supabase migration new",
        "supabase:cli:status": "supabase status"
    },
    "dependencies": {
        "@ai-sdk/openai": "^2.0.76",
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@hookform/resolvers": "^5.2.2",
        "@mui/icons-material": "^7.3.5",
        "@mui/material": "^7.3.4",
        "@prisma/client": "^5.19.1",
        "@supabase/ssr": "^0.5.0",
        "@supabase/supabase-js": "^2.47.10",
        "@tanstack/react-query": "^5.59.0",
        "ai": "^5.0.106",
        "axios": "^1.6.7",
        "next": "15.1.6",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.66.0",
        "recharts": "^3.5.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "eslint": "^9.20.1",
        "eslint-config-next": "15.1.6",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.3.3",
        "prisma": "^5.19.1",
        "typescript": "^5.6.0",
        "vitest": "^2.0.5"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json,md}": [
            "prettier --write"
        ]
    }
}
